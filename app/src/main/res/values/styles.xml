<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Flood.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/flood_app_bar_animator
        </item>
    </style>

    <style name="Widget.Flood.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Flood.TextInputLayout
        </item>
        <item name="boxBackgroundColor">?android:attr/windowBackground</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>


    <style name="ShapeAppearanceOverlay.Flood.TextInputLayout" parent="">
        <item name="cornerSize">16dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.Flood.Story" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Flood.Story.Profile" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.Flood.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>


    <style name="Widget.Flood.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">30dp</item>
        <item name="backgroundTint">@color/flood_button_color_selector</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="fontFamily">@font/dmsans_bold</item>
        <item name="android:textSize">12sp</item>
    </style>



    <style name="TextAppearance.Flood.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0</item>
    </style>

    <style name="Widget.Flood.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/flood_fab_color_selector</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Flood.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/flood_bottom_nav_icon_selector</item>

    </style>



</resources>